@model RestaurantAspCore3.Models.Category
@{
    ViewData["Title"] = "Create Category";
}

<br /><br />
<div class="row">
    <div class="col-12">
        <h4 class="text-info text-center text-uppercase">
           Create Category
        </h4>
    </div> 
</div>
<div class="row mt-5">
    <div class="col-md-4 offset-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="Category Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index"class="btn btn-outline-success" >Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

